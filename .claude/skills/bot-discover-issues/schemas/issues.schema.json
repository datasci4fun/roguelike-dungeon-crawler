{
  "type": "object",
  "properties": {
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "description",
          "type",
          "severity",
          "paths",
          "evidence",
          "suggested_fix",
          "confidence"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 5
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "type": {
            "type": "string",
            "enum": [
              "bug",
              "security",
              "performance",
              "refactor",
              "docs",
              "test",
              "ci",
              "deps"
            ]
          },
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "paths": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "repro": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "suggested_fix": {
            "type": "string",
            "minLength": 20
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "issues"
  ]
}