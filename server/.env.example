# Roguelike Online - Environment Configuration
# Copy this file to .env and modify as needed

# Application
DEBUG=true
APP_NAME=Roguelike Online
APP_VERSION=0.1.0

# Server
HOST=0.0.0.0
PORT=8000

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=roguelike
POSTGRES_PASSWORD=roguelike_secret
POSTGRES_DB=roguelike

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
